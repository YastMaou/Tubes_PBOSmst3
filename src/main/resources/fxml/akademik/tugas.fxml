<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.projektestsiak.controllers.akademik.TugasController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f6fa;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#handleBack" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Label text="Daftar Tugas" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="Kumpulkan Tugas" onAction="#handleKumpulkanTugas" 
               style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Button text="Refresh" onAction="#handleRefresh" 
               style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
    </HBox>

    <!-- Table -->
    <TableView fx:id="tugasTable" style="-fx-background-color: white; -fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="colMataKuliah" text="Mata Kuliah" prefWidth="150" />
            <TableColumn fx:id="colJudul" text="Judul Tugas" prefWidth="200" />
            <TableColumn fx:id="colDeskripsi" text="Deskripsi" prefWidth="250" />
            <TableColumn fx:id="colDeadline" text="Deadline" prefWidth="150" />
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>
