<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.projektestsiak.controllers.akademik.PelajaranTambahanController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f6fa;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#handleBack" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Label text="Pelajaran Tambahan" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Label fx:id="totalSKSLabel" style="-fx-font-size: 14px; -fx-text-fill: #e67e22; -fx-font-weight: bold;" />
    </HBox>

    <!-- Registration Form -->
    <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">
        <Label text="Pendaftaran Pelajaran Tambahan" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" 
               GridPane.columnSpan="2" GridPane.rowIndex="0" />
        
        <Label text="Pilih Mata Kuliah:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <ComboBox fx:id="mataKuliahComboBox" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        
        <Label text="SKS:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Label fx:id="sksLabel" text="0 SKS" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        
        <Label text="Biaya:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Label fx:id="biayaLabel" text="Rp 0" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        
        <Label text="Bukti Pembayaran:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <TextField fx:id="buktiPembayaranField" prefWidth="250" />
            <Button text="Browse" onAction="#handleBrowseBukti" 
                   style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;" />
        </HBox>
        
        <HBox spacing="15" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <Button text="Daftar" onAction="#handleDaftar" 
                   style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;" />
            <Button text="Refresh" onAction="#handleRefresh" 
                   style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;" />
        </HBox>
    </GridPane>

    <!-- Registered Courses -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
        <Label text="Mata Kuliah Terdaftar" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <TableView fx:id="registeredTable">
            <columns>
                <TableColumn fx:id="colKode" text="Kode" prefWidth="100" />
                <TableColumn fx:id="colNama" text="Nama Mata Kuliah" prefWidth="200" />
                <TableColumn fx:id="colSKS" text="SKS" prefWidth="80" />
                <TableColumn fx:id="colDosen" text="Dosen" prefWidth="150" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>