<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.projektestsiak.controllers.admin.JadwalAdminController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f6fa;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#handleBack" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Label text="Manajemen Jadwal Pelajaran" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>

    <!-- Form Input -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Label text="Form Tambah/Edit Jadwal" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <GridPane hgap="15" vgap="15">
            <Label text="Mata Pelajaran:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ComboBox fx:id="mataKuliahComboBox" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Hari:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ComboBox fx:id="hariComboBox" prefWidth="150" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Jam Mulai:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <TextField fx:id="jamMulaiField" prefWidth="100" promptText="HH:mm"/>
                <Label text="Format: HH:mm (contoh: 08:00)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
            </HBox>
            
            <Label text="Jam Selesai:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <TextField fx:id="jamSelesaiField" prefWidth="100" promptText="HH:mm"/>
                <Label text="Format: HH:mm (contoh: 10:00)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
            </HBox>
            
            <Label text="Ruangan:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="ruanganField" prefWidth="200" promptText="Contoh: A101" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
        
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
            <Button fx:id="btnTambah" text="Tambah Jadwal" onAction="#handleTambah" 
                   style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            <Button fx:id="btnUpdate" text="Update Jadwal" onAction="#handleUpdate" disabled="true"
                   style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            <Button fx:id="btnHapus" text="Hapus Jadwal" onAction="#handleHapus" disabled="true"
                   style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            <Button fx:id="btnClear" text="Clear Form" onAction="#handleClear" 
                   style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            <Button text="Refresh Data" onAction="#handleRefresh" 
                   style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
        </HBox>
    </VBox>

    <!-- Daftar Jadwal -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Label text="Daftar Jadwal Pelajaran" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <TableView fx:id="jadwalTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="colKode" text="Kode" prefWidth="80"/>
                <TableColumn fx:id="colMataKuliah" text="Mata Pelajaran" prefWidth="200"/>
                <TableColumn fx:id="colDosen" text="Dosen" prefWidth="150"/>
                <TableColumn fx:id="colHari" text="Hari" prefWidth="100"/>
                <TableColumn fx:id="colJam" text="Jam" prefWidth="150"/>
                <TableColumn fx:id="colRuangan" text="Ruangan" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>