<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projektestsiak.controllers.admin.JadwalAdminController"
            styleClass="root">

    <!-- TOP: Header dengan judul dan navigasi -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20px;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button text="â† Kembali ke Dashboard" 
                        onAction="#handleBack"
                        styleClass="btn-secondary btn-sm"
                        style="-fx-font-weight: bold;" />
                
                <Label text="MANAJEMEN JADWAL" 
                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button text="ðŸ”„ Refresh" 
                        onAction="#handleRefresh"
                        styleClass="btn-info btn-sm" />
            </HBox>
            
            <Label text="Kelola jadwal mata pelajaran: tambah, edit, atau hapus jadwal" 
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" />
        </VBox>
    </top>

    <!-- CENTER: Konten utama dengan form dan tabel -->
    <center>
        <SplitPane dividerPositions="0.4" style="-fx-padding: 20px;">
            
            <!-- LEFT: Form input -->
            <VBox spacing="15" style="-fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 10px;">
                <Label text="Form Jadwal" styleClass="form-title" />
                
                <!-- Mata Kuliah -->
                <VBox spacing="5">
                    <Label text="Mata Kuliah *" styleClass="form-label" />
                    <ComboBox fx:id="mataKuliahComboBox" 
                              promptText="Pilih mata kuliah..."
                              styleClass="form-control"
                              prefWidth="300" />
                </VBox>
                
                <!-- Hari -->
                <VBox spacing="5">
                    <Label text="Hari *" styleClass="form-label" />
                    <ComboBox fx:id="hariComboBox" 
                              promptText="Pilih hari..."
                              styleClass="form-control" />
                </VBox>
                
                <!-- Jam -->
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Jam Mulai *" styleClass="form-label" />
                        <TextField fx:id="jamMulaiField" 
                                   promptText="HH:mm (contoh: 08:30)"
                                   styleClass="form-control" />
                    </VBox>
                    
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Jam Selesai *" styleClass="form-label" />
                        <TextField fx:id="jamSelesaiField" 
                                   promptText="HH:mm (contoh: 10:00)"
                                   styleClass="form-control" />
                    </VBox>
                </HBox>
                
                <!-- Ruangan -->
                <VBox spacing="5">
                    <Label text="Ruangan *" styleClass="form-label" />
                    <TextField fx:id="ruanganField" 
                               promptText="Contoh: A101, Lab Komputer 1"
                               styleClass="form-control" />
                </VBox>
                
                <!-- Tombol Aksi -->
                <HBox spacing="10" style="-fx-padding: 20px 0 0 0;">
                    <Button text="âž• Tambah" 
                            onAction="#handleTambah"
                            fx:id="btnTambah"
                            styleClass="btn-success"
                            prefWidth="100" />
                    
                    <Button text="âœï¸ Update" 
                            onAction="#handleUpdate"
                            fx:id="btnUpdate"
                            styleClass="btn-primary"
                            prefWidth="100"
                            disable="true" />
                    
                    <Button text="ðŸ—‘ï¸ Hapus" 
                            onAction="#handleHapus"
                            fx:id="btnHapus"
                            styleClass="btn-danger"
                            prefWidth="100"
                            disable="true" />
                    
                    <Button text="ðŸ—‘ï¸ Clear" 
                            onAction="#handleClear"
                            fx:id="btnClear"
                            styleClass="btn-secondary"
                            prefWidth="100" />
                </HBox>
                
                <!-- Petunjuk -->
                <VBox spacing="5" style="-fx-padding: 10px; -fx-background-color: #f8f9fa; -fx-background-radius: 5px;">
                    <Label text="Petunjuk:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Label text="1. Isi semua field bertanda *" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                    <Label text="2. Format jam: HH:mm (24 jam)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                    <Label text="3. Klik baris tabel untuk edit/hapus" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                </VBox>
            </VBox>
            
            <!-- RIGHT: Tabel jadwal -->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10px 0;">
                    <Label text="Daftar Jadwal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="lblTotalJadwal" text="Total: 0 jadwal" style="-fx-text-fill: #7f8c8d;" />
                </HBox>
                
                <TableView fx:id="jadwalTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colKode" text="Kode" prefWidth="80" />
                        <TableColumn fx:id="colMataKuliah" text="Mata Kuliah" prefWidth="200" />
                        <TableColumn fx:id="colDosen" text="Dosen" prefWidth="150" />
                        <TableColumn fx:id="colHari" text="Hari" prefWidth="100" />
                        <TableColumn fx:id="colJam" text="Jam" prefWidth="120" />
                        <TableColumn fx:id="colRuangan" text="Ruangan" prefWidth="100" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                
                <!-- Status Bar -->
                <HBox spacing="10" style="-fx-padding: 10px; -fx-background-color: #f8f9fa; -fx-background-radius: 5px;">
                    <Label text="â„¹ï¸" style="-fx-text-fill: #3498db;" />
                    <Label text="Pilih baris untuk mengedit atau menghapus jadwal" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                </HBox>
            </VBox>
            
        </SplitPane>
    </center>

    <!-- BOTTOM: Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #f8f9fa;">
            <Label text="Â© 2024 Sistem Akademik Sekolah - Halaman Manajemen Jadwal" 
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
        </HBox>
    </bottom>

</BorderPane>