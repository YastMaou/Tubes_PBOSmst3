<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projektestsiak.controllers.admin.LaporanNilaiController"
            style="-fx-background-color: #f5f6fa;">

    <!-- HEADER -->
    <top>
        <HBox spacing="15"
              alignment="CENTER_LEFT"
              style="-fx-padding: 16; -fx-background-color: #2c3e50;">

            <Button fx:id="btnBack"
                    text="â† Back"
                    onAction="#handleBack"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: white;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                    "/>

            <Label text="ðŸ“Š Laporan Nilai Siswa"
                   style="
                        -fx-text-fill: white;
                        -fx-font-size: 20px;
                        -fx-font-weight: bold;
                   "/>
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="15" style="-fx-padding: 24;">

            <TableView fx:id="tableLaporan"
                       prefHeight="520"
                       style="-fx-background-radius: 8;">

                <columns>
                    <TableColumn fx:id="colNama"
                                 text="Nama Siswa"
                                 prefWidth="200"/>

                    <TableColumn fx:id="colTugas"
                                 text="Tugas"
                                 prefWidth="260"/>

                    <TableColumn fx:id="colNilai"
                                 text="Nilai"
                                 prefWidth="100"/>

                    <TableColumn fx:id="colKomentar"
                                 text="Komentar"
                                 prefWidth="320"/>
                </columns>

            </TableView>

        </VBox>
    </center>

</BorderPane>
