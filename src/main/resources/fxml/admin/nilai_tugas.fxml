<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.projektestsiak.controllers.admin.NilaiController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f6fa;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#handleBack" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Label text="Penilaian Tugas Siswa" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Tabs untuk Belum/Sudah Dinilai -->
        <VBox spacing="10" prefWidth="600" HBox.hgrow="ALWAYS">
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
                <Tab text="Belum Dinilai">
                    <VBox spacing="10">
                        <TableView fx:id="tableBelumDinilai" prefHeight="250">
                            <columns>
                                <TableColumn fx:id="colSiswaBelum" text="Siswa" prefWidth="150"/>
                                <TableColumn fx:id="colMataKuliahBelum" text="Mata Pelajaran" prefWidth="150"/>
                                <TableColumn fx:id="colTugasBelum" text="Tugas" prefWidth="150"/>
                                <TableColumn fx:id="colTanggalBelum" text="Tanggal Submit" prefWidth="150"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </Tab>
                
                <Tab text="Sudah Dinilai">
                    <VBox spacing="10">
                        <TableView fx:id="tableSudahDinilai" prefHeight="250">
                            <columns>
                                <TableColumn fx:id="colSiswaSudah" text="Siswa" prefWidth="120"/>
                                <TableColumn fx:id="colMataKuliahSudah" text="Mata Pelajaran" prefWidth="120"/>
                                <TableColumn fx:id="colTugasSudah" text="Tugas" prefWidth="120"/>
                                <TableColumn fx:id="colNilaiSudah" text="Nilai" prefWidth="80"/>
                                <TableColumn fx:id="colTanggalSudah" text="Tanggal Submit" prefWidth="150"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </Tab>
            </TabPane>
            
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                <Button text="Refresh Data" onAction="#handleRefresh" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
                <Button text="Clear Selection" onAction="#handleClear" 
                       style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
            </HBox>
        </VBox>

        <!-- Form Penilaian -->
        <VBox spacing="15" prefWidth="350" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Label text="Form Penilaian" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            
            <!-- Detail Tugas -->
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 8;">
                <Label text="Detail Tugas" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <GridPane hgap="5" vgap="5">
                    <Label text="Siswa:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblDetailSiswa" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Mata Pelajaran:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblDetailMataKuliah" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Tugas:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblDetailTugas" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <Label text="Deskripsi:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblDetailDeskripsi" wrapText="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    
                    <Label text="Tanggal Submit:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblDetailTanggal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>
                
                <Button fx:id="btnLihatFile" text="Lihat File Tugas" onAction="#handleLihatFile" disabled="true"
                       style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 5 10; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Input Nilai -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 15 0 0 0;">
                <Label text="Nilai (0-100):" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="nilaiField" prefWidth="100" promptText="Contoh: 85.5" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Komentar:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextArea fx:id="komentarArea" prefRowCount="3" prefWidth="300" 
                         promptText="Masukkan komentar/feedback..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>
            
            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                <Button fx:id="btnBeriNilai" text="Beri Nilai" onAction="#handleBeriNilai" disabled="true"
                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button fx:id="btnUpdateNilai" text="Update Nilai" onAction="#handleUpdateNilai" disabled="true"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button fx:id="btnHapusNilai" text="Hapus Nilai" onAction="#handleHapusNilai" disabled="true"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </HBox>

</VBox>