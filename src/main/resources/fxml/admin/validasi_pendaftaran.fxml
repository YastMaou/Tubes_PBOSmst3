<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.projektestsiak.controllers.admin.ValidasiController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f6fa;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#handleBack" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Label text="Validasi Pendaftaran Pelajaran Tambahan" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Table Panel -->
        <VBox spacing="10" prefWidth="600" HBox.hgrow="ALWAYS">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Pendaftaran Menunggu Validasi" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Button text="Refresh" onAction="#handleRefresh" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
            </HBox>
            
            <TableView fx:id="pendaftaranTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colSiswa" text="Siswa" prefWidth="150"/>
                    <TableColumn fx:id="colMataKuliah" text="Mata Pelajaran" prefWidth="200"/>
                    <TableColumn fx:id="colSKS" text="SKS" prefWidth="80"/>
                    <TableColumn fx:id="colBiaya" text="Biaya" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- Detail Panel -->
        <VBox spacing="15" prefWidth="350" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Label text="Detail Pendaftaran" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            
            <GridPane hgap="10" vgap="10">
                <Label text="Siswa:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="lblDetailSiswa" wrapText="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Mata Pelajaran:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="lblDetailMataKuliah" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="SKS:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="lblDetailSKS" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Total Biaya:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="lblDetailBiaya" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Bukti Pembayaran:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <Button fx:id="btnLihatBukti" text="Lihat Bukti" onAction="#handleLihatBukti" disabled="true"
                           style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;" />
                </HBox>
            </GridPane>
            
            <!-- Image Preview -->
            <VBox spacing="5" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 8;">
                <Label text="Preview Bukti Pembayaran" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                <ImageView fx:id="imageViewBukti" fitWidth="300" fitHeight="150" preserveRatio="true" 
                          style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                <Button fx:id="btnApprove" text="Setujui" onAction="#handleApprove" disabled="true"
                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button fx:id="btnReject" text="Tolak" onAction="#handleReject" disabled="true"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </HBox>

</VBox>