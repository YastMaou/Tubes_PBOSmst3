<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projektestsiak.controllers.admin.ValidasiController"
            styleClass="root">

    <!-- TOP: Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20px;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button text="â† Kembali ke Dashboard" 
                        onAction="#handleBack"
                        styleClass="btn-secondary btn-sm"
                        style="-fx-font-weight: bold;" />
                
                <Label text="VALIDASI PENDAFTARAN PELAJARAN TAMBAHAN" 
                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button text="ðŸ”„ Refresh" 
                        onAction="#handleRefresh"
                        styleClass="btn-info btn-sm" />
            </HBox>
            
            <Label text="Validasi pendaftaran mata pelajaran tambahan dari siswa" 
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" />
        </VBox>
    </top>

    <!-- CENTER: Konten utama -->
    <center>
        <SplitPane dividerPositions="0.6" style="-fx-padding: 20px;">
            
            <!-- LEFT: Tabel pendaftaran -->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10px 0;">
                    <Label text="Daftar Pendaftaran Pending" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="lblTotalPending" text="Total: 0 pendaftaran" 
                           style="-fx-text-fill: #7f8c8d;" />
                </HBox>
                
                <TableView fx:id="pendaftaranTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSiswa" text="Siswa" prefWidth="150" />
                        <TableColumn fx:id="colMataKuliah" text="Mata Kuliah" prefWidth="180" />
                        <TableColumn fx:id="colSKS" text="SKS" prefWidth="60" />
                        <TableColumn fx:id="colBiaya" text="Biaya" prefWidth="120" />
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                
                <!-- Status Bar -->
                <HBox spacing="10" style="-fx-padding: 10px; -fx-background-color: #f8f9fa; -fx-background-radius: 5px;">
                    <Label text="â„¹ï¸" style="-fx-text-fill: #3498db;" />
                    <Label text="Pilih baris untuk melihat detail dan validasi" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                </HBox>
            </VBox>
            
            <!-- RIGHT: Detail dan aksi -->
            <VBox spacing="15" style="-fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 10px;">
                <Label text="Detail Pendaftaran" styleClass="form-title" />
                
                <!-- Detail Siswa -->
                <VBox spacing="5">
                    <Label text="Siswa:" styleClass="form-label" />
                    <Label fx:id="lblDetailSiswa" text="-" 
                           style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                </VBox>
                
                <!-- Detail Mata Kuliah -->
                <VBox spacing="5">
                    <Label text="Mata Kuliah:" styleClass="form-label" />
                    <Label fx:id="lblDetailMataKuliah" text="-" 
                           style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                </VBox>
                
                <!-- Detail SKS dan Biaya -->
                <HBox spacing="20">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="SKS:" styleClass="form-label" />
                        <Label fx:id="lblDetailSKS" text="-" 
                               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    </VBox>
                    
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Total Biaya:" styleClass="form-label" />
                        <Label fx:id="lblDetailBiaya" text="-" 
                               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    </VBox>
                </HBox>
                
                <!-- Preview Bukti Pembayaran -->
                <VBox spacing="5">
                    <Label text="Bukti Pembayaran:" styleClass="form-label" />
                    <ImageView fx:id="imageViewBukti" 
                               fitWidth="300" 
                               fitHeight="200"
                               preserveRatio="true"
                               style="-fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-background-color: #f8f9fa;" />
                    
                    <Button text="ðŸ‘ï¸ Lihat Bukti Pembayaran" 
                            onAction="#handleLihatBukti"
                            fx:id="btnLihatBukti"
                            styleClass="btn-info btn-sm"
                            disable="true"
                            prefWidth="300" />
                </VBox>
                
                <!-- Tombol Aksi -->
                <VBox spacing="10" style="-fx-padding: 20px 0 0 0;">
                    <HBox spacing="10">
                        <Button text="âœ… Setujui" 
                                onAction="#handleApprove"
                                fx:id="btnApprove"
                                styleClass="btn-success"
                                prefWidth="140"
                                disable="true" />
                        
                        <Button text="âŒ Tolak" 
                                onAction="#handleReject"
                                fx:id="btnReject"
                                styleClass="btn-danger"
                                prefWidth="140"
                                disable="true" />
                    </HBox>
                    
                    <Label text="* Klik 'Tolak' akan meminta alasan penolakan" 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-font-style: italic;" />
                </VBox>
                
                <!-- Informasi Status -->
                <VBox spacing="5" style="-fx-padding: 10px; -fx-background-color: #f8f9fa; -fx-background-radius: 5px;">
                    <Label text="Status Validasi:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <HBox spacing="10">
                        <Label text="ðŸŸ¡ Pending" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />
                        <Label text="ðŸŸ¢ Disetujui" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" />
                        <Label text="ðŸ”¢ Ditolak" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
                    </HBox>
                </VBox>
            </VBox>
            
        </SplitPane>
    </center>

    <!-- BOTTOM: Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #f8f9fa;">
            <Label text="Â© 2024 Sistem Akademik Sekolah - Halaman Validasi Pendaftaran" 
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
        </HBox>
    </bottom>

</BorderPane>