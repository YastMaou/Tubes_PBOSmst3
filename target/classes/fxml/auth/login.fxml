<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.projektestsiak.controllers.auth.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);"
           alignment="CENTER">

    <!-- VBOX PUTIH UNTUK FORM LOGIN -->
    <VBox alignment="CENTER" spacing="20" 
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 35; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 8);"
          prefWidth="380" prefHeight="450">
        
        <!-- JUDUL SISTEM -->
        <VBox spacing="8" alignment="CENTER">
            <!-- JUDUL UTAMA -->
            <Label text="Sistem Akademik Sekolah" 
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-alignment: center;" />
            
            <!-- SUB JUDUL -->
            <Label text="Manajemen Pembelajaran Digital" 
                   style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-alignment: center;"/>
        </VBox>
        
        <!-- FORM LOGIN -->
        <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="300">
            <Label text="Masuk ke Akun Anda" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-alignment: center;" 
                   prefWidth="300"/>
            
            <!-- USERNAME FIELD -->
            <VBox spacing="5">
                <Label text="Username" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Masukkan username" 
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 10; -fx-font-size: 14px;" 
                          prefWidth="300"/>
            </VBox>
            
            <!-- PASSWORD FIELD -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 12px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" promptText="Masukkan password" 
                              style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 10; -fx-font-size: 14px;" 
                              prefWidth="300"/>
            </VBox>
            
            <!-- LOGIN BUTTON -->
            <Button text="MASUK" onAction="#handleLogin" 
                   style="-fx-background-color: #58d4b5ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-cursor: hand;" 
                   prefWidth="300"/>
        </VBox>
        
        <!-- INFORMASI AKUN DEMO -->
        <VBox spacing="10" alignment="CENTER" prefWidth="300">
            <Label text="Akun Demo untuk Testing" 
                   style="-fx-text-fill: #95a5a6; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            
            <HBox spacing="20" alignment="CENTER">
                <!-- AKUN ADMIN -->
                <VBox spacing="3" alignment="CENTER">
                    <Label text="Administrator" style="-fx-text-fill: #58d4b5ff; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                    <Label text="admin" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10px; -fx-font-weight: bold;"/>
                    <Label text="admin123" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10px;"/>
                </VBox>
                
                <!-- AKUN SISWA -->
                <VBox spacing="3" alignment="CENTER">
                    <Label text="Siswa" style="-fx-text-fill: #3498db; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                    <Label text="student" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10px; -fx-font-weight: bold;"/>
                    <Label text="student123" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10px;"/>
                </VBox>
            </HBox>
        </VBox>
    </VBox>

</StackPane>