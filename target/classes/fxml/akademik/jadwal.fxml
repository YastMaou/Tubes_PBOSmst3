<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.projektestsiak.controllers.akademik.JadwalController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f6fa;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#handleBack" 
               style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
        <Label text="Jadwal Akademik" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>

    <!-- Filter -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Filter Hari:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
        <ComboBox fx:id="hariComboBox" prefWidth="150" />
        <Button text="Refresh" onAction="#handleRefresh" 
               style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16;" />
    </HBox>

    <!-- Table -->
    <TableView fx:id="jadwalTable" style="-fx-background-color: white; -fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="colHari" text="Hari" prefWidth="100" />
            <TableColumn fx:id="colJam" text="Jam" prefWidth="150" />
            <TableColumn fx:id="colMataKuliah" text="Mata Kuliah" prefWidth="250" />
            <TableColumn fx:id="colRuangan" text="Ruangan" prefWidth="150" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>